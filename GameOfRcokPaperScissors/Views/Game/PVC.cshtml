@model GameOfRcokPaperScissors.Models.Game

@{
    ViewData["Title"] = "PVC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center container text-success">

    <h1 class="fw-bold text-dark">Bring it On!</h1>

</div>
<body class="bg-primary text-center container ">

 

 <div class="container text-center">
     @if (@ViewBag.Message == "Its a Draw"){
         <h2 class="text-warning">@ViewBag.Message</h2>
     }
        else if (@ViewBag.Message == "The Winner is Player 1"){
         <h2 class="text-success">@ViewBag.Message</h2>
     }
        else{
             <h2 class="text-danger">@ViewBag.Message</h2>
    
        }
      
     
    </div>
    <div>
          <h2>@ViewBag.Choicesp1</h2>
        <h2>@ViewBag.Choicesc1</h2>
        <h3 class="fw-bold">How many games Played @TempData["GamesPlayed"]</h3>
    </div>


      <div>
    </div>



    <!-- Coundt figure out how to make this easier wanted to do a if statment with in the controller function , defintly would look at making the difficulty tidier using less code -->

    <div class="text-center">

      @if (@ViewBag.Diff == "Easy"){
        
          <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompEasy" asp-route-id="0" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">ROCK</a>

           <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompEasy" asp-route-id="1" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">PAPER</a>
       
        <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompEasy" asp-route-id="2" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">SCISSORS</a>
      }
      else if(ViewBag.Diff == "Medium"){
         <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompMed" asp-route-id="0" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">ROCK</a>

           <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompMed" asp-route-id="1" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">PAPER</a>
       
        <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsCompMed" asp-route-id="2" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">SCISSORS</a>
      }
    else
    {
        <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsComp" asp-route-id="0" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">ROCK</a>

           <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsComp" asp-route-id="1" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">PAPER</a>
       
        <a class="btn btn-secondary" asp-controller="Game" asp-action="PlayerVsComp" asp-route-id="2" asp-route-Gamesplayed="@TempData["GamesPlayed"]"
           asp-route-PW="@TempData["Pw"]" asp-route-CW="@TempData["Cw"]" asp-route-PD="@TempData["Pd"]" asp-route-CD="@TempData["Cd"]"
           asp-route-PRW="@TempData["Rw"]" asp-route-PpW="@TempData["Ppw"]">SCISSORS</a>
    }
    </div>

    <h4 class="col-md-2 pt-5 fw-bold">Game stats</h4>
    <div class="row">
        <div class="col-md-4">
        </div>
    </div>
    <div>
        <table class="table table-dark">
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th scope="col">Win</th>
                    <th scope="col">Draw</th>
                    <th scope="col">Losse</th>
                    <th scope="col">win%</th>
                    <th scope="col">rock wins</th>
                    <th scope="col">paper wins</th>
                    <th scope="col">scissors wins</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Player</th>
                    <td>@TempData["Pw"]</td>
                    <td>@TempData["Pd"]</td>
                    <td>@TempData["Pl"]</td>
                    <td>@TempData["Pow"]% </td>
                    <td>@TempData["Rw"]</td>
                    <td>@TempData["Ppw"]</td>
                    <td>@TempData["Sw"]</td>
                </tr>
                <tr>
                    <th scope="row">Computer</th>
                    <td>@TempData["Cw"]</td>
                    <td>@TempData["Cd"]</td>
                    <td>@TempData["Cl"]</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                </tr>
            </tbody>

        </table>

    </div>
</body>
<div>

    <button  class="btn btn-secondary " onclick="window.location.href='/';">
        Home
    </button>
</div>

